rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Alle Dokumente im gesamten Firestore
    match /{document=**} {
      // Nur authentifizierte Nutzer (auch anonymous) d√ºrfen lesen und schreiben
      allow read, write: if request.auth != null;
    }
  }
}